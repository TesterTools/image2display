<UserControl
    x:Class="Image2Display.Views.ImageConvertView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Image2Display.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="580"
    x:DataType="vm:ImageConvertViewModel"
    mc:Ignorable="d">
    <Grid>
        <Grid.Styles>
            <!--  鼠标经过时变浅  -->
            <Style Selector="Image.ImageMask">
                <Setter Property="OpacityMask" Value="#9FFFFFFF" />
            </Style>
            <Style Selector="Image.ImageMask:pointerover">
                <Setter Property="OpacityMask" Value="#2FFFFFFF" />
            </Style>
        </Grid.Styles>
        <!--  图片显示区域  -->
        <Grid>
            <!--  空图片  -->
            <Image
                Width="100"
                Classes="ImageMask"
                Source="/Assets/image.png">
                <!--<Image.InputBindings>
                    <MouseBinding Command="{Binding ImportImageCommand}" MouseAction="LeftClick" />
                </Image.InputBindings>-->
            </Image>
        </Grid>
    </Grid>
</UserControl>
