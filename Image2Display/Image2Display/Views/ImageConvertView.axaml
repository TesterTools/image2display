<UserControl
    x:Class="Image2Display.Views.ImageConvertView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Avalonia.Xaml.Interactivity"
    xmlns:ia="using:Avalonia.Xaml.Interactions.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Image2Display.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="580"
    x:DataType="vm:ImageConvertViewModel"
    mc:Ignorable="d">
    <Grid>
        <Grid.Styles>
            <!--  鼠标经过时变浅  -->
            <Style Selector="Image.ImageMask">
                <Setter Property="OpacityMask" Value="#9FFFFFFF" />
            </Style>
            <Style Selector="Image.ImageMask:pointerover">
                <Setter Property="OpacityMask" Value="#2FFFFFFF" />
            </Style>
        </Grid.Styles>
        <!--  图片显示区域  -->
        <Grid>
            <!--  空图片  -->
            <Image
                Name="ImportImage"
                Width="100"
                Classes="ImageMask"
                Source="/Assets/image.png">
                <i:Interaction.Behaviors>
                    <ia:EventTriggerBehavior EventName="PointerPressed" SourceObject="{Binding #ImportImage}">
                        <ia:InvokeCommandAction Command="{Binding ImportImageCommand}" />
                    </ia:EventTriggerBehavior>
                </i:Interaction.Behaviors>
            </Image>
        </Grid>
    </Grid>
</UserControl>
